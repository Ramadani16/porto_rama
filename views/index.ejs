<script>
  const form = document.getElementById('contactForm');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', async (e) => {
    e.preventDefault(); // Hindari reload halaman

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    // Ubah tombol jadi loading
    submitBtn.disabled = true;
    const originalText = submitBtn.innerText;
    submitBtn.innerText = "Mengirim...";

    try {
      const response = await fetch('/kirim-pesan', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      if (response.ok) {
        showToast('Pesan berhasil dikirim!');
        form.reset();
      } else {
        showToast('Gagal mengirim pesan. Coba lagi nanti.', true);
      }
    } catch (error) {
      console.error(error);
      showToast('Terjadi kesalahan saat mengirim pesan.', true);
    } finally {
      // Balikkan tombol seperti semula
      submitBtn.disabled = false;
      submitBtn.innerText = originalText;
    }
  });

  function showToast(message, isError = false) {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-6 right-6 z-50 px-4 py-3 rounded-lg text-white shadow-lg transition-opacity opacity-0 ${
      isError ? 'bg-red-600' : 'bg-green-600'
    }`;
    toast.innerText = message;
    document.body.appendChild(toast);

    // Muncul pelan
    setTimeout(() => toast.classList.add('opacity-100'), 100);

    // Hilang pelan
    setTimeout(() => {
      toast.classList.remove('opacity-100');
      setTimeout(() => toast.remove(), 500);
    }, 3000);
  }
</script>
